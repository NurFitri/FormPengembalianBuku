<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl4026.formpengembalianbuku.MainActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perpustakaan Telkom School Malang"
        android:textColor="#ff0000" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:src="@drawable/ic_logo" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No Anggota"
                android:inputType="numberSigned" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextTgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Pengembalian" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas" />

        <RadioGroup
            android:id="@+id/radioGroupKelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonRPL1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RPL 1" />

            <RadioButton
                android:id="@+id/radioButtonRPL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RPL 2" />

            <RadioButton
                android:id="@+id/radioButtonRPL3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RPL 3" />

            <RadioButton
                android:id="@+id/radioButtonRPL4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RPL 4" />

            <RadioButton
                android:id="@+id/radioButtonRPL5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="RPL 5" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Buku" />

        <CheckBox
            android:id="@+id/checkBoxNovel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novel" />

        <CheckBox
            android:id="@+id/checkBoxKomik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komik" />

        <CheckBox
            android:id="@+id/checkBoxEnsiklopedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ensiklopedia" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Pinjam" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonSubmit"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgbtn"
            android:text="Submit"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textViewHasilNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            tools:text="HasilNo" />

        <TextView
            android:id="@+id/textViewHasilNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            tools:text="HasilNama" />

        <TextView
            android:id="@+id/textViewHasilTgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            tools:text="HasilTgl" />

        <TextView
            android:id="@+id/textViewHasilKelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            tools:text="HasilKelas" />

        <TextView
            android:id="@+id/textViewHasilJenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            tools:text="HasilJenis" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text" />

    </LinearLayout>
</ScrollView>